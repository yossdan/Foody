<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainPerfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="32dp"
    tools:context=".PerfilActivity">

    <!-- TÃTULO GRANDE, ESTILO APP SERIA -->
    <TextView
        android:id="@+id/txtTituloPerfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Perfil"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:letterSpacing="0.02"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <!-- AVATAR MÃS GRANDE -->
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_profile"
        android:background="@drawable/bg_avatar_circle"
        android:padding="20dp"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@id/txtTituloPerfil"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- NOMBRE MÃS GRANDE Y FUERTE -->
    <TextView
        android:id="@+id/txtNombreUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="Usuario Foody"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="@id/imgAvatar"
        app:layout_constraintStart_toEndOf="@id/imgAvatar"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- EMAIL / INFO MÃS LEGIBLE -->
    <TextView
        android:id="@+id/txtInfoUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="6dp"
        android:text="Correo@ejemplo.com"
        android:textSize="14sp"
        android:textColor="#777777"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/txtNombreUsuario"
        app:layout_constraintStart_toEndOf="@id/imgAvatar"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ”¥ NUEVA FILA DE ESTADÃSTICAS: SEGUIDORES / SEGUIDOS / RECETAS / FAVORITOS -->
    <LinearLayout
        android:id="@+id/layoutStatsPerfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imgAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtSeguidores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0 seguidores"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/txtSeguidos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0 seguidos"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/txtRecetas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0 recetas"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/txtFavoritos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0 favoritos"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- SEPARADOR SUAVE TIPO UBER -->
    <View
        android:id="@+id/divisorPerfil"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#EEEEEE"
        app:layout_constraintTop_toBottomOf="@id/layoutStatsPerfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BOTÃ“N CERRAR SESIÃ“N, MÃS GRANDE Y CÃ“MODO -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCerrarSesion"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="Cerrar sesiÃ³n"
        android:textAllCaps="false"
        android:textColor="@color/btn"
        android:textSize="15sp"
        android:backgroundTint="@android:color/transparent"
        app:strokeColor="@color/btn"
        app:strokeWidth="1dp"
        app:cornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@id/divisorPerfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditarCorreo"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:text="Editar correo"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:backgroundTint="#F5F5F5"
        app:cornerRadius="22dp"
        app:layout_constraintTop_toBottomOf="@id/btnCerrarSesion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BOTTOM NAV: SOLO INICIO Y PERFIL -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="407dp"
        android:layout_height="71dp"
        android:background="@android:color/white"
        app:itemIconSize="26dp"
        app:itemIconTint="@color/btn"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottom_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>
