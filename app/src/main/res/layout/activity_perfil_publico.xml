<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainPerfilPublico"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="32dp"
    tools:context=".PerfilPublicoActivity">

    <!-- BOTÓN ATRÁS -->

    <!-- TÍTULO -->

    <!-- AVATAR -->

    <ImageView
        android:id="@+id/btnAtrasPerfilPublico"
        android:layout_width="35dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/angle_left_solid_full"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/black" />

    <TextView
        android:id="@+id/txtTituloPerfilPublico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="sans-serif-medium"
        android:text="Perfil"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintStart_toEndOf="@id/btnAtrasPerfilPublico"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgAvatarPublico"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_profile"
        android:background="@drawable/bg_avatar_circle"
        android:padding="20dp"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@id/txtTituloPerfilPublico"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- NOMBRE -->
    <TextView
        android:id="@+id/txtNombreUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="Usuario Foody"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="@id/imgAvatarPublico"
        app:layout_constraintStart_toEndOf="@id/imgAvatarPublico"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CORREO / INFO -->
    <TextView
        android:id="@+id/txtInfoUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="6dp"
        android:text="correo@ejemplo.com"
        android:textSize="14sp"
        android:textColor="#777777"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/txtNombreUsuario"
        app:layout_constraintStart_toEndOf="@id/imgAvatarPublico"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- STATS: SEGUIDORES / SEGUIDOS / RECETAS / FAVORITOS -->
    <LinearLayout
        android:id="@+id/layoutStatsPerfilPublico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imgAvatarPublico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtSeguidores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0 seguidores"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/txtSeguidos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0 seguidos"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/txtRecetas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0 recetas"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/txtFavoritos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0 favoritos"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- BOTONES SEGUIR / MENSAJE -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSeguir"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="Seguir"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:backgroundTint="@color/btn"
        app:cornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@id/layoutStatsPerfilPublico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnMensaje"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMensaje"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        android:text="Mensaje"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@color/btn"
        android:backgroundTint="@android:color/white"
        app:strokeWidth="1dp"
        app:strokeColor="@color/btn"
        app:cornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@id/layoutStatsPerfilPublico"
        app:layout_constraintStart_toEndOf="@id/btnSeguir"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
