<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nombre_receta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@color/white"
    tools:context=".Recetas">

    <!-- TOP BAR SUPER COMPACTA -->

    <ImageButton
        android:id="@+id/btnAtrasRecetas"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:contentDescription="Regresar"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/angle_left_solid_full"
        app:tint="@android:color/black" />

    <!-- SUBTÃTULO MUY LIGERO -->
    <TextView
        android:id="@+id/txtTituloRecetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.02"
        android:text="Recetas"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btnAtrasRecetas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toEndOf="@id/btnAtrasRecetas"
        app:layout_constraintTop_toTopOf="@id/btnAtrasRecetas" />

    <TextView
        android:id="@+id/txtSubtituloRecetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Explora y busca tus platillos favoritos"
        android:textColor="#A0A0A0"
        android:textSize="11sp"
        android:letterSpacing="0.01"
        app:layout_constraintTop_toBottomOf="@id/btnAtrasRecetas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BUSCADOR MINI (70% ANCHO), CENTRADO -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutBuscarReceta"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Buscar receta..."
        app:layout_constraintWidth_percent="0.7"
        app:boxBackgroundColor="#F7F7F7"
        app:boxBackgroundMode="filled"
        app:boxStrokeColor="@android:color/transparent"
        app:startIconDrawable="@android:drawable/ic_menu_search"
        app:startIconTint="#A0A0A0"
        app:layout_constraintTop_toBottomOf="@id/txtSubtituloRecetas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtBuscarReceta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@null"
            android:textSize="13sp"
            android:includeFontPadding="false" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- LISTA DE RECETAS, AJUSTADA Y LIMPIA -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRecetas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="6dp"
        android:paddingBottom="2dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        app:layout_constraintTop_toBottomOf="@id/layoutBuscarReceta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
