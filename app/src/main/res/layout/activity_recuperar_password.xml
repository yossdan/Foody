<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRecuperar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingHorizontal="20dp"
    android:paddingTop="32dp"
    tools:context=".RecuperarPasswordActivity">

    <!-- TÍTULO PRINCIPAL -->
    <TextView
        android:id="@+id/txtTituloRecuperar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recuperar contraseña"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- SUBTÍTULO LIGERO -->
    <TextView
        android:id="@+id/txtSubtituloRecuperar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Ingresa tu correo y te enviaremos un código para cambiar tu contraseña."
        android:textSize="13sp"
        android:textColor="#9A9A9A"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/txtTituloRecuperar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9" />

    <!-- PRIMER PASO: CORREO -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutCorreoRec"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Correo electrónico"
        app:layout_constraintTop_toBottomOf="@id/txtSubtituloRecuperar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="#F5F5F5"
        app:boxStrokeColor="@android:color/transparent"
        app:boxCornerRadiusTopStart="18dp"
        app:boxCornerRadiusTopEnd="18dp"
        app:boxCornerRadiusBottomStart="18dp"
        app:boxCornerRadiusBottomEnd="18dp"
        app:startIconDrawable="@android:drawable/ic_dialog_email"
        app:startIconTint="#B0B0B0">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtCorreoRec"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@android:color/transparent"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="10dp"
            android:textSize="15sp"
            android:textColor="@android:color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- BOTÓN ENVIAR CÓDIGO -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEnviarCodigo"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:text="Enviar código"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/btn"
        app:cornerRadius="22dp"
        app:layout_constraintTop_toBottomOf="@id/layoutCorreoRec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9" />

    <!-- SEGUNDO PASO: CÓDIGO + NUEVA CONTRASEÑA -->
    <LinearLayout
        android:id="@+id/layoutSegundoPaso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnEnviarCodigo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <!-- CÓDIGO -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutCodigo"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Código de verificación"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#F5F5F5"
            app:boxStrokeColor="@android:color/transparent"
            app:boxCornerRadiusTopStart="18dp"
            app:boxCornerRadiusTopEnd="18dp"
            app:boxCornerRadiusBottomStart="18dp"
            app:boxCornerRadiusBottomEnd="18dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtCodigo"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:paddingHorizontal="10dp"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- NUEVA CONTRASEÑA -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutPassNueva"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Nueva contraseña"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#F5F5F5"
            app:boxStrokeColor="@android:color/transparent"
            app:boxCornerRadiusTopStart="18dp"
            app:boxCornerRadiusTopEnd="18dp"
            app:boxCornerRadiusBottomStart="18dp"
            app:boxCornerRadiusBottomEnd="18dp"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPassNueva"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:paddingHorizontal="10dp"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- CONFIRMAR CONTRASEÑA -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutPassConfirmar"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Confirmar contraseña"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#F5F5F5"
            app:boxStrokeColor="@android:color/transparent"
            app:boxCornerRadiusTopStart="18dp"
            app:boxCornerRadiusTopEnd="18dp"
            app:boxCornerRadiusBottomStart="18dp"
            app:boxCornerRadiusBottomEnd="18dp"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPassConfirmar"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:paddingHorizontal="10dp"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- BOTÓN CAMBIAR CONTRASEÑA -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCambiarPassword"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="18dp"
            android:text="Cambiar contraseña"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/btn"
            app:cornerRadius="22dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
